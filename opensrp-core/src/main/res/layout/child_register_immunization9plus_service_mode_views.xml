                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/txt_dpt_booster_due_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/dpt_booster"
                    style="@style/CustomFontTextViewStyle.ListView.Normal" />

                <org.smartregister.view.customcontrols.CustomFontTextView
                    android:id="@+id/txt_dpt_booster_due_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_dpt_booster_due_type"
                    android:layout_alignParentStart="true"
                    style="@style/CustomFontTextViewStyle.ListView.Normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerInside"
                    android:layout_toEndOf="@id/txt_dpt_booster_due_on"
                    android:src="@drawable/ic_needle" />
            </RelativeLayout>

        </FrameLayout>

        <org.smartregister.view.customcontrols.CustomFontTextView
