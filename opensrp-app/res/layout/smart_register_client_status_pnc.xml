<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/txt_status_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_pnc"
            style="@style/CustomFontTextViewStyle.ListView.Medium"/>

    <org.ei.opensrp.view.customControls.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_delivery"
            style="@style/CustomFontTextViewStyle.ListView.Normal"/>

    <org.ei.opensrp.view.customControls.CustomFontTextView
            android:id="@+id/txt_status_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomFontTextViewStyle.ListView.Normal"/>
</LinearLayout>
    